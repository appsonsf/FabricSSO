@page
@model ReNameModel
@{
    ViewData["Title"] = "修改用户名";
}
<div class=" col-md-12 col-sm-12">
    <div role="tabpanel" class="tab-pane active" id="_register">
        <form method="post">
            <div class="box">
                <h3 class="title">修改用户名,请输入新的用户名</h3>
                <div class="form">
                    <div class="form-group row">
                        <label class="col-sm-2 control-label">新用户名：</label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control" name="username" placeholder="用户名,以字母开头的字母与数字组合,比如:a52013,zhangsan1" autoComplete="off">
                        </div>
                        <span class="col-sm-3 remarks">请输入新的用户名</span>
                    </div>
                    @if (!ViewContext.ModelState.IsValid)
                    {
                        <div class="form-group row">

                            <div class="col-sm-9">
                                <p class="bg-warning">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                </p>
                            </div>
                        </div>
                    }

                </div>
                <div class="pane-footer"><button type="submit" class="btn btn-primary">提交</button></div>
            </div>
        </form>
    </div>
</div>